{
	frankenphp {
		php_ini memory_limit 512M

		worker {
		    file public/index.php

            watch src/**/*.php
            watch templates/**/*.html.twig
		}
	}

	supervisor {
        php bin/console messenger:consume --all -vv {
            dir /app
            termination_grace_period 30s
            restart_policy always
            replicas 3
        }
	}
}

http://localhost https://localhost {
    tls internal
    encode zstd br gzip

    php_server {
        root /app/public
    }
}
